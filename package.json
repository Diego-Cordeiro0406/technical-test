{
  "name": "technical_test_api",
  "main": "src/server.js",
  "version": "1.0.0",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "tsnd --watch \"./src/**\" ./src/server.ts",
    "predev": "npm run db:reset",
    "test": "mocha -r ts-node/register ./tests/**/*$NAME*.test.ts -t 10000 --exit",
    "lint": "tsc && eslint . --ext .ts",
    "db:reset": "npx -y tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "test:coverage": "nyc --all --include src/models --include src/services --include src/controllers npm run test"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@types/sequelize": "^4.28.20",
    "eslint-config-trybe-backend": "^2.1.0",
    "sequelize-cli": "6.6.1",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.17.1",
    "express": "^4.19.2",
    "mysql2": "^3.11.0",
    "sequelize": "^6.37.3",
    "typescript": "4.4"
  }
}
